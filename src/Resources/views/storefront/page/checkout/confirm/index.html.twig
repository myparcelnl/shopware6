{% sw_extends '@Storefront/storefront/page/checkout/confirm/index.html.twig' %}

{% block page_checkout_confirm_form_submit %}
    {% if(context.shippingMethod.id == page.myparcel_values.shippingMethodId) %}
        <input type="hidden" name="myparcel[shipping_method_id]" value="{{page.myparcel_values.shippingMethodId }}" />
        <input type="hidden" name="myparcel[delivery_date]" value="{{page.myparcel_values.deliveryDate }}" />
        <input type="hidden" name="myparcel[requires_signature]" value="{{page.myparcel_values.requiresSignature }}" />
        <input type="hidden" name="myparcel[only_recipient]" value="{{page.myparcel_values.onlyRecipient }}" />
        <input type="hidden" name="myparcel[delivery_type]" value="{{page.myparcel_values.deliveryType }}" />
        <input type="hidden" name="myparcel[delivery_location]" value="{{page.myparcel_values.deliveryLocation }}" />
        {% if page.myparcel_values.pickupPointData %}
            <input type="hidden" name="myparcel[pickup_point_data]" value="{{page.myparcel_values.pickupPointData }}" />
        {% endif %}
    {% endif %}
    {{ parent() }}
{% endblock %}
